<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- kanban view -->
    <record id="view_kids_kanban" model="ir.ui.view">
        <field name="name">hospital.kids.kanban</field>
        <field name="model">hospital.kids</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="ref"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        name:
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        age:
                                        <field name="age"/>
                                    </li>
                                    <li>
                                        gender:
                                        <field name="gender"/>
                                    </li>
                                    <li>
                                        reference:
                                        <field name="ref"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--  MAKE FORM VIEW -->
    <record id="view_hospital_kids_form" model="ir.ui.view">
        <field name="name">hospital.kids.form</field>
        <field name="model">hospital.kids</field>
        <field name="arch" type="xml">
            <form>
                 <header>
                     <button  id="button_confirm" name="action_confirm" string="confirm" class="btn.primary" type="object" confirm="ARE YOU SURE?"/>
                     <button  id="button_done" name="action_done" string="Mark As Done" class="btn.primary" type="object"/>
                     <button  id="button_draft" name="action_draft" string="Set To Draft" class="btn.primary" type="object"/>
                     <button  id="button_cancel" name="action_cancel" string="Cancel" class="btn.primary" type="object" confirm="ARE YOU SURE, DO YOU WANT TO CANCEL?"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ref" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="parent_detail"/>
                            <field name="age"/>
                            <field name="gender"/>
                        </group>
                        <group>
                             <field name="notes"/>
                            <field name="doctor_id" options="{'no_open': True, 'no_create': True}"/>
                            <field name="capitalize_name"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>
    <!-- FOR TREE VIEW -->
    <record id="view_hospital_kids_tree" model="ir.ui.view">
        <field name="name">hospital.kids.tree</field>
        <field name="model">hospital.kids</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name"/>
                <field name="parent_detail"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- FOR SEARCH VIEW -->
    <record id="view_hospital_kids_search" model="ir.ui.view">
        <field name="name">hospital.kids.search</field>
        <field name="model">hospital.kids</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="['|', ('name', 'ilike', self), ('ref', ilike, self)]"/>
                <field name="age"/>
                <field name="gender"/>
                <filter name="filter_male" string="Male" domain="[('gender', '=', 'male')]"/>
                <filter name="filter_female" string="Female" domain="[('gender', '=', 'Female')]"/>
                <filter name="filter_other" string="Other" domain="[('gender', '=', 'other')]"/>
                <separator/>
                <group expand="0" string="Group By...">
                    <filter string="Gender" name="group_by_gender" context="{'group_by': 'gender'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hospital_kids" model="ir.actions.act_window">
        <field name="name">Kids</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.kids</field>
        <field name="view_mode">tree,form</field>
        <field name="context"></field>
    </record>
</odoo>