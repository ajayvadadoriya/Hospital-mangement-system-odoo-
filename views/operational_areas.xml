<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hospital_areas_form" model="ir.ui.view">
        <field name="name"> hospital.areas.form</field>
        <field name="model">hospital.areas</field>
        <field name="arch" type="xml">
            <form string="hospital_areas_form">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
<!-- Tree View -->
    <record id="view_hospital_areas_tree" model="ir.ui.view">
        <field name="name">hospital.areas.tree</field>
        <field name="model">hospital.areas</field>
        <field name="arch" type="xml">
            <tree string="hospital_areas_tree">
                <field name="name"/>
            </tree>
        </field>
    </record>
<!-- Search View -->
    <record id="view_hospital_areas_search" model="ir.ui.view">
        <field name="name">hospital.areas.search</field>
        <field name="model">hospital.areas</field>
        <field name="arch" type="xml">
            <search string="hospital_areas_search">

            </search>
        </field>
    </record>
<!-- Action -->
    <record id="action_hospital_areas" model="ir.actions.act_window">
        <field name="name">Hospital Areas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.areas</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create a pharmacy!!!!!!
            </p>
        </field>
    </record>


</odoo>