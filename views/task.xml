<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_edit_project_form_inherit1" model="ir.ui.view">
        <field name="name">project.project.inherited1</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Construction Side Information" name="construction side information">
                    <label for="project_manager" string="Project Manager"/>
                    <field name="project_manager" string="Project Manager" placeholder="Project Manager"/>
                    <br/>
                    <label for="task_project" string="Task Project"/>
                    <field name="task_project" string="Task Project" placeholder="Task Project"/>
                    <br/>
                    <label for="construction_type" string="Construction Type"/>
                    <field name="construction_type" string="Construction Type" placeholder="Construction Type"/>
                    <br/>
                    <label for="location" string="Location Desc"/>
                    <field name="location" string="Location Desc" placeholder="Location Desc"/>
                </page>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Timesheet" name="Timesheet">
                    <field name="time_sheet" placeholder="Time Sheet">
                        <tree>
                            <field name="date"/>
                            <field name="name"/>
                            <field name="unit_amount" string="Duration"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Planning Of Material" name="Planning Of Material">
                </page>
            </xpath>

             <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_open_picking_detail" type="object" class="oe_stat_button" icon="fa-truck" >
                    <div class="o_stat_info">
                        <field name="picking_count" class="o_stat_value"/>
                        <span class="o_stat_text">Picking</span>
                    </div>
                </button>
            </xpath>

            <xpath expr="//div[hasclass('oe_highlight')]" position="after">
                  <button  id="button_create_subtask" name="%(action_create_subtask)d" string="Create Subtask" class="btn-primary" type="action"/>
            </xpath>


        </field>
    </record>


     <menuitem id="menu_construction_project"
              name="Construction"
              parent="project.menu_main_pm"
              sequence="10"/>


     <menuitem id="menu_project_view_note"
              name="Project Note"
              parent="menu_construction_project"
              action="action_projects_notes"
              sequence="10"/>
</odoo>