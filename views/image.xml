<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hospital_image_form" model="ir.ui.view">
        <field name="name">hospital.image.form</field>
        <field name="model">hospital.image</field>
        <field name="arch" type="xml">
            <form string="hospital_image_form">
                <sheet>
                    <header>
                        <field name="image" widget="image"/>
                    </header>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree View -->
    <record id="view_hospital_image_tree" model="ir.ui.view">
        <field name="name">hospital.image.tree</field>
        <field name="model">hospital.image</field>
        <field name="arch" type="xml">
            <tree string="hospital_image_tree">
                <field name="image"/>
            </tree>
        </field>
    </record>
