<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<!-- kanban view -->
    <record id="view_patient_kanban" model="ir.ui.view">
        <field name="name">hospital.patient.kanban</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="ref"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        name:<field name="name"/>
                                    </li>
                                    <li>
                                         age:<field name="age"/>
                                    </li>
                                    <li>
                                        gender:<field name="gender"/>
                                    </li>
                                    <li>
                                        reference:<field name="ref"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!--  MAKE FORM VIEW -->
    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                 <header>
                     <button  id="button_confirm" name="action_confirm" string="confirm" class="btn-primary" type="object" confirm="ARE YOU SURE?"/>
                     <button  id="button_done" name="action_done" string="Mark As Done" class="btn-primary" type="object"/>
                     <button  id="button_draft" name="action_draft" string="Set To Draft" class="btn-primary" type="object"/>
                     <button  id="button_create_appointment" name="%(action_create_appointment)d" string="Create Appointment" class="btn-primary" type="action"/>
                     <button  id="button_cancel" name="action_cancel" string="Cancel" class="btn-primary" type="object"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_appointment" type="object" class="oe_stat_button" icon="fa-calendar">
                                <div class="o_stat_info">
                                    <field name="appointment_count" class="o_stat_value"/>
                                    <span class="o_stat_text"> Meetings</span>
                                </div>
                            </button>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="ref" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="parent_detail"/>
                            <field name="is_child"/>
                            <field name="age"/>
                            <field name="gender"/>
                        </group>
                        <group>
                             <field name="notes"/>
                            <field name="doctor_id" options="{'no_open': True, 'no_create': True}"/>
                            <field name="capitalize_name"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Appointment_Details">
                            <field name="appointment_ids">
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>
    <!-- FOR TREE VIEW -->
    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name"/>
                <field name="parent_detail"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <!-- FOR SEARCH VIEW -->
    <record id="view_hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="['|', ('name', 'ilike', self), ('ref', ilike, self)]"/>
                <field name="age"/>
                <field name="gender"/>
                <filter name="filter_male" string="Male" domain="[('gender', '=', 'male')]"/>
                <filter name="filter_female" string="Female" domain="[('gender', '=', 'Female')]"/>
                <filter name="filter_other" string="Other" domain="[('gender', '=', 'other')]"/>
                <separator/>
                <filter name="filter_child" string="Child" domain="[('is_child', '=', 'True')]"/>
                <group expand="0" string="Group By...">
                    <filter string="Gender" name="group_by_gender" context="{'group_by': 'gender'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- FOR GIVING ACTION IN MENU -->
    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>


</odoo>