<?xml version="1.0"?>
<odoo>
    <record id="create_appointment_view_form" model="ir.ui.view">
        <field name="name">create.appointment.wizard.form</field>
        <field name="model">create.appointment.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Appointment">
                <group>
                    <field name="date"/>
                    <field name="patient_id"/>
                </group>
                <footer>
<!--                    <button  name="print_report" string="print" class="btn-primary" type="object"/>-->
                    <button id="button_create_appointment" name="action_create_appointment" string="Create" class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                    <button id="button_view_appointment" name="action_view_appointment" string="View Appointment" class="btn-primary" type="object"/>
<!--                    <button name="print_report" string="Print" class="btn-primary" type="object"/>-->

                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_appointment" model="ir.actions.act_window">
        <field name="name">Create Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.appointment.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="create_appointment_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>
